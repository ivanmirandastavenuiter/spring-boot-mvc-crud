	<script>
	
		$(document).ready(function() {
			
			try {
				
				$('.delete-btn').click(function(e) {
					
					e.preventDefault();
					let url = $(this)[0].href;
					
			    	let newForm = document.createElement("form");
			    	newForm.action = url;
			    	newForm.method = "POST";
			    	newForm.submit();

				});
				
			} catch(e) {
				console.log("Error name: " + e.name);
				console.log("Description: " + e.message);
			} 
			
		});
	
	</script>

